{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "eastus"
        },
        "router_name": {
            "type": "string",
            "defaultValue": "dariusztest01"
        },
        "router_attribute": {
            "type": "string",
            "defaultValue": "dariusztest01"
        },
        "client_id": {
            "type": "string"
        },
        "client_secret": {
            "type": "securestring"
        }
    },
    "resources": [
      {
        "type": "Microsoft.Resources/deploymentScripts",
        "apiVersion": "2020-10-01",
        "name": "runPowerShellInlineWithOutput",
        "location": "[resourceGroup().location]",
        "kind": "AzurePowerShell",
        "properties": {
          "azPowerShellVersion": "6.4",
          "timeout": "PT1H",
          "cleanupPreference": "OnSuccess",
          "retentionInterval": "P1D",
          "environmentVariables": [
            {
              "name": "ROUTER_NAME",
              "value": "[parameters('router_name')]"
            },
            {
              "name": "ROUTER_ATTRIBUTE",
              "value": "[parameters('router_attribute')]"
            },
            {
                "name": "CLIENT_ID",
                "value": "[parameters('client_id')]"
              },
              {
                "name": "CLIENT_SECRET",
                "value": "[parameters('client_secret')]"
              }
          ],
          "primaryScriptUri": "https://raw.githubusercontent.com/netfoundry/MEC/public_mec/Azure/PublicMEC/create_router.ps1"
        }
      }
    ],
    "outputs": {
      "result": {
        "value": "[reference('Microsoft.Resources/deploymentScripts/runPowerShellInlineWithOutput')]",
        "type": "string"
      }
    }
  }